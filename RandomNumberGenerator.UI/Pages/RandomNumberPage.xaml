<UserControl x:Class="RandomNumberGenerator.UI.Pages.RandomNumberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RandomNumberGenerator.UI.Pages"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Random number generator" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Margin="10" Grid.Column="0" Text="Minimum : "/>
                <TextBox Grid.Row="0" Margin="10" Grid.Column="1" Text="{Binding MinimumNumberText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Row="1" Margin="10" Grid.Column="0" Text="Maximum : "/>
                <TextBox Grid.Row="1" Margin="10" Grid.Column="1" Text="{Binding MaximumNumberText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </StackPanel>
        <TextBlock Grid.Row="2" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding GeneratedRandomNumber}" FontSize="30"/>
        <Button Grid.Row="3" Content="Generate" Command="{Binding GenerateCommand}" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
